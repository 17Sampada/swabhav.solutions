@model IEnumerable<OneTo1CombinedWith1ToMany.Models.Author>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" border="1" width="40%">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.AuthorDetails.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorDetails.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorDetails.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorDetails.Country)
            </th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AuthorDetails.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorDetails.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorDetails.State)
            <td>
                @Html.DisplayFor(modelItem => item.AuthorDetails.Country)
            </td>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("BookDetails", "BookDetails", "Books", new { authorId = item.Id }, null) |

